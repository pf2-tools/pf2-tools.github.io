.wrapper
  display flex

.tabs
  display flex
  flex-direction column
  padding-top 4px
  z-index 1
  margin-right -1px

.tab
  padding 0.25em
  background-color purple
  border 1px solid #fff
  cursor pointer

  &:not(:first-child)
    border-top none

  &.selected
    border-width 1px 0 1px 1px

.details
  padding 0.5em
  border 1px solid white
  background rgba(255,255,255,.6)
